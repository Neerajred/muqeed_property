<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="agent_registration_form_template" name="Agent Registration Form">
        <t t-call="website.layout">
            <style>
    /* Main form container with minimalistic and modern style */
    .form-container {
        background-color: #f5f5f5;
        width: 100%;
        max-width: 400px;
        margin: auto;
        border-radius: 12px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        padding: 20px;
        transform: scale(1);
        animation: fadeInUp 1s ease-in-out forwards;
    }

    /* Add a fade-in animation for the form */
    @keyframes fadeInUp {
        0% {
            opacity: 0;
            transform: translateY(20px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Minimalist label and input field styling */
    .label {
        font-family: 'Arial', sans-serif;
        color: #333;
        font-weight: 600;
        font-size: 1rem;
        margin-bottom: 10px;
    }

    .input-field {
        border-radius: 10px;
        border: 1px solid #ddd;
        padding: 12px;
        font-size: 1rem;
        width: 100%;
        margin-bottom: 20px;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    /* Focus effect on input fields */
    .input-field:focus {
        border-color: #007bff;
        box-shadow: 0 0 8px rgba(0, 123, 255, 0.4);
        outline: none;
    }

    /* Minimalist button with a smooth hover effect */
    .btn-submit {
        background-color: #007bff;
        color: #fff;
        padding: 12px 30px;
        border-radius: 30px;
        border: none;
        font-size: 1.1rem;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-submit:hover {
        background-color: #0056b3;
        transform: translateY(-3px);
    }

    /* Heading style */
    h2 {
        font-family: 'Arial', sans-serif;
        font-size: 2rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 30px;
    }

    /* Adding padding to form fields */
    .form-group {
        margin-bottom: 20px;
    }

    /* Mobile responsiveness */
    @media (max-width: 768px) {
        .form-container {
            width: 90%;
        }

        h2 {
            font-size: 1.8rem;
        }
    }
</style>

            <div class="container mt-5">
                <h2 class="text-center">Agent Registration Form</h2>
                <div class="form-container d-flex justify-content-center align-items-center">
                    <form action="/agent/submit_registration" method="post" class="mt-4 form-shadow p-4 rounded">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <div class="form-group">
                            <label for="name" class="label">Agent Name</label>
                            <input type="text" name="name" id="name" class="form-control input-field" required="True"/>
                        </div>
                        <div class="form-group">
                            <label for="phone" class="label">Phone</label>
                            <input type="tel" name="phone" id="phone" class="form-control input-field" required="True"/>
                        </div>
                        <div class="form-group">
                            <label for="email" class="label">Email</label>
                            <input type="email" name="email" id="email" class="form-control input-field" required="True"/>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-submit">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </t>
    </template>
</odoo>

